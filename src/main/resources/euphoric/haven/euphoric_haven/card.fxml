<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="euphoric.haven.euphoric_haven.CardController">
   <children>
      <ImageView fx:id="imageView" fitHeight="175.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <VBox alignment="BOTTOM_LEFT" prefWidth="250.0" style="-fx-border-radius: 10 10 10 10; -fx-background-radius: 10 10 10 10;" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="titleLabel" text="PlaceName">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <Label fx:id="descLabel" layoutX="10.0" layoutY="10.0" text="Description" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <Label fx:id="ratingLabel" layoutX="10.0" layoutY="240.0" text="Rating">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</HBox>
